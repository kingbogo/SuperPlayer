<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Top -->

    <LinearLayout
        android:id="@+id/super_ctrl_top_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="@drawable/super_bg_shape_controller_top"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/super_ctrl_top_back_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:src="@drawable/super_ic_arrow_back"
            android:visibility="gone"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/super_ctrl_top_title_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingStart="10dp"
            android:paddingEnd="8dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry"
            tools:text="@string/super_app_name" />

    </LinearLayout>


    <!-- Bottom -->

    <LinearLayout
        android:id="@+id/super_ctrl_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:background="@drawable/super_bg_shape_controller_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/super_ctrl_bottom_play_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/super_selector_action_play"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/super_ctrl_bottom_current_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="00:00" />

        <SeekBar
            android:id="@+id/super_ctrl_bottom_seek_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:max="100"
            android:maxHeight="2dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:progressDrawable="@drawable/super_img_progress_bar"
            android:thumb="@drawable/super_img_seekbar"
            android:thumbOffset="0dp" />

        <TextView
            android:id="@+id/super_ctrl_bottom_total_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="14:30" />

        <ImageView
            android:id="@+id/super_ctrl_bottom_full_screen_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/super_selector_action_full_screen"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/super_ctrl_bottom_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/super_img_progress_bar"
        android:visibility="gone"
        tools:progress="50"/>


    <!-- Center -->

    <FrameLayout
        android:id="@+id/super_ctrl_center_fl"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/super_ctrl_center_play_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/super_bg_shape_play"
            android:padding="10dp"
            android:src="@drawable/super_selector_action_play"
            tools:ignore="ContentDescription" />

        <ProgressBar
            android:id="@+id/super_ctrl_center_loading_pb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/super_progress_loading"
            android:visibility="gone" />

    </FrameLayout>


    <!-- Left -->

    <ImageView
        android:id="@+id/super_ctrl_left_lock_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="15dp"
        android:src="@drawable/super_selector_action_lock"
        android:visibility="gone"
        tools:ignore="ContentDescription" />


    <!-- Right -->


</merge>