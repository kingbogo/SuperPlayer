<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/audio_scroll_view"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audio"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <FrameLayout
            android:id="@+id/audio_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/audio_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/audio_play_1_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="播放1" />

            <Button
                android:id="@+id/audio_play_2_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="播放2" />

            <Button
                android:id="@+id/audio_play_3_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="播放3" />

            <Button
                android:id="@+id/audio_play_loop_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="循环播放" />

            <Button
                android:id="@+id/audio_play_15_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="播放15秒" />

            <Button
                android:id="@+id/audio_pause_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="暂停" />

            <Button
                android:id="@+id/audio_resume_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="继续" />

            <Button
                android:id="@+id/audio_stop_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="停止" />

            <Button
                android:id="@+id/audio_replay_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="重新播放" />

            <Button
                android:id="@+id/audio_replay_seek_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="重新播放seek" />

            <Button
                android:id="@+id/audio_play_mute_yes_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="设置静音" />

            <Button
                android:id="@+id/audio_play_mute_no_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="恢复音量" />

            <Button
                android:id="@+id/audio_play_duration_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="进度" />

            <Button
                android:id="@+id/audio_play_is_playing_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="是否播放中?" />

            <Button
                android:id="@+id/audio_play_list_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="播放列表" />

            <Button
                android:id="@+id/audio_play_fragment_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="fragment" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>