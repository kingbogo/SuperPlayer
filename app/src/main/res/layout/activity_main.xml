<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <com.kingbogo.superplayer.view.SuperPlayerView
        android:id="@+id/main_super_player_view"
        android:layout_width="430dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/main_play_1_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="播放1" />

            <Button
                android:id="@+id/main_play_2_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="播放2" />

            <Button
                android:id="@+id/main_play_3_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="播放3" />

            <Button
                android:id="@+id/main_play_loop_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="循环播放" />

            <Button
                android:id="@+id/main_play_local_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="本地播放" />

            <Button
                android:id="@+id/main_play_15_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="播放15秒" />

            <Button
                android:id="@+id/main_pause_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="暂停" />

            <Button
                android:id="@+id/main_resume_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="继续" />

            <Button
                android:id="@+id/main_stop_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="停止" />

            <Button
                android:id="@+id/main_stop_clear_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="停止+清除" />

            <Button
                android:id="@+id/main_replay_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="重新播放" />

            <Button
                android:id="@+id/main_replay_seek_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="重新播放seek" />

            <Button
                android:id="@+id/main_play_mute_yes_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="设置静音" />

            <Button
                android:id="@+id/main_play_mute_no_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="恢复音量" />

            <Button
                android:id="@+id/main_play_total_duration_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="总时长" />

            <Button
                android:id="@+id/main_play_current_duration_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="当前进度" />

            <Button
                android:id="@+id/main_play_mode_default_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="渲染模式:默认" />

            <Button
                android:id="@+id/main_play_mode_16_9_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="渲染模式:16_9" />

            <Button
                android:id="@+id/main_play_mode_4_3_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="渲染模式:4_3" />

            <Button
                android:id="@+id/main_play_mode_fit_xy_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="渲染:fit_xy" />

            <Button
                android:id="@+id/main_play_mode_original_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="渲染:ORIGINAL" />

            <Button
                android:id="@+id/main_play_mode_center_crop_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="渲染:CENTER" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>